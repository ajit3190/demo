<!-- SECTION -->
<div class="section">
	<!-- container -->
	<div class="container">
		<!-- row -->
		<div class="row">
			<% @categories.each do |c| %>
				<!-- shop -->
				<div class="col-md-4 col-xs-6">
					<div class="shop">
						<div class="shop-img">
							<%= category_dashboard_img(c) %>
						</div>
						<div class="shop-body">
							<h3><%= c.name %></h3><br>
							<% if current_user.role_id == 1 %>
					  		<%= button_to 'Remove', category_path(c), class: 'btn btn-danger btn-sm', method: :delete, data: {confirm: 'Are you sure?'} %>
					  	<% end %>
						</div>
					</div>
				</div>
				<!-- /shop -->	
			<% end %>		
		</div>
		<!-- /row -->
	</div>
	<!-- /container -->
</div>
<!-- /SECTION -->