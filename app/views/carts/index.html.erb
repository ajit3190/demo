<% if current_user.nil? %>
	<h2>Please login first for adding services </h2>
<% end %>

<% if @cart_items.nil? || @cart_items.empty? %>
	<h1> Your Cart is Empty </h1>
<% else %>
<!-- SECTION -->
<div class="section">
  <!-- container -->
  <div class="container">
    <!-- row -->
    <div class="row">
      <% current_user.present? && @cart_items.each do |ci| %>
        <!-- shop -->
        <div class="col-md-4 col-xs-6">
          <div class="shop">
            <div class="shop-img">
              <%= cart_item_dashboard_img(ci) %>
            </div>
            <div class="shop-body">
              <h3><%= ci.service.title %></h3>
              <h4>â‚¹<%= ci.service.price %></h4>
              <%= button_to 'Remove', cart_path(ci), class: 'add-to-cart-btn delete btn-danger', method: :delete, data: {confirm: 'Are you sure?'} %>
            </div>
          </div>
        </div>
        <!-- /shop -->  
      <% end %>   
    </div>
    <!-- /row -->
  </div>
  <!-- /container -->
</div>
<!-- /SECTION -->
<% end %>